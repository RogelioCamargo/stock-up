<section class="register container-sm row mt-5 m-auto">
	<h1 class="fs-3">Register</h1>
	<%= render "shared/errors" %>
	<form action="<%= users_url%>" method="post">
		<%= authenticity_token %>
		<div class="mb-2">
			<label for="user_username">Username</label>
			<input type="text" name="user[username]" class="form-control form-control-sm" id="user_username">
		</div>

		<div class="mb-2">
			<label for="user_password">Password</label>
			<input type="password"  name="user[password]" class="form-control form-control-sm" id="user_password">
		</div>

		<div class="mb-2">
			<label for="user_email">Email</label>
			<input type="email"  name="user[email]" class="form-control form-control-sm" id="user_email">
		</div>

		<button class="w-100 btn btn-sm btn-primary" type="submit">Sign up</button>
	</form>
</section>