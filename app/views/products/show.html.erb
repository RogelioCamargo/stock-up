<section>
	<div class="mt-4 mb-2">
		<%= page_title "Display Product Details" %>
	</div>
	<div class="mt-3">
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Name:
			</div>
			<div>
				<%= @product.name %>
			</div>
		</div>
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Category:
			</div>
			<div>
				<%= @product.category.name %>
			</div>
		</div>
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Quantity:
			</div>
			<div>
				<%= @product.quantity %>
			</div>
		</div>
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Purchase Link:
			</div>
			<div>
				<a class="text-decoration-none" href="<%= @product.shop_url %>">Launch In New Tab</a>
			</div>
		</div>
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Unit of Measure:
			</div>
			<div>
				<%= @product.unit_of_measure %>
			</div>
		</div>
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Warning Limit:
			</div>
			<div>
				<%= @product.reorder_limit %>
			</div>
		</div>
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Reorder Amount:
			</div>
			<div>
				<%= @product.reorder_amount %>
			</div>
		</div>
		<div class="d-flex">
			<div class="w-10-rem fw-bold">
				Delivery Window:
			</div>
			<div>
				<%= @product.delivery_window %>
			</div>
		</div>
	</div>
	<div class="mt-3 d-flex">
		<a class="w-5-rem btn btn-primary btn-sm me-1" href="<%= edit_product_url(@product) %>">Edit</a>
		<form action="<%= product_url(@product) %>" method="post">
			<input type="hidden" name="_method" value="delete">
			<%= authenticity_token %>
			<button class="w-5-rem btn btn-danger btn-sm" type="submit">Delete</button>
		</form>
	</div>
</section>