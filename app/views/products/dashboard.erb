<section>
	<div class="d-flex justify-content-between mt-4 mb-2">
		<%= page_title "Need to Order" %>
		<div class="d-flex">
			<form action="<%= request_products_products_url %>" method="post">
				<%= authenticity_token %>
				<button class='btn btn-primary btn-sm' type="submit">Request Products</button>
			</form>
			<form action="<%= order_all_requested_products_url%>" method="post">
				<%= authenticity_token %>
				<button class='btn btn-primary btn-sm ms-1' type="submit">Mark All As Ordered</button>
			</form>
		</div>
	</div>
	<%= render 'shared/products', products: @requested_products, location: 0 %>
</section>

<section>
	<div class="d-flex justify-content-between mt-4 mb-2">
		<%= page_title "Items in Route" %>
		<form action="<%= receive_all_ordered_products_url %>" method="post">
			<%= authenticity_token %>
			<button class='btn btn-primary btn-sm ms-1' type="submit">Mark All As Received</button>
		</form>
	</div>
	<%= render 'shared/products', products: @ordered_products, location: 0 %>
</section>