<section>
	<h1>Categories</h1>
	<div>
		<% if @categories.empty? %>
			<p>There are none.</p>
		<% else %>
			<ul>
				<% @categories.each do |category| %>
					<li>
						<span><%= category.name %></span>
						<%= link_to "Update", edit_category_url(category) %>
						<form action="<%= category_url(category) %>" method="post">
							<input type="hidden" name="_method" value="delete">
							<%= authenticity_token %>
							<input type="submit" value="Delete">
						</form>
					</li>
				<% end %>
			</ul>
		<% end %>
	</ul>
</section>
<section>
	<%= render "shared/errors" %>
	<form action="<%= categories_url %>" method="post">
		<%= authenticity_token %>
		<label for="category_name">Name</label>
		<input type="text" name="category[name]" id="category_name">
		<input type="submit" value="Create">
	</form>
</section>