<!DOCTYPE html>
<html>
  <head>
    <title>StockUp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
	<nav class="navbar navbar-expand-lg bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">StockUp</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="<%= order_list_products_url %>">Order List</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="<%= products_url %>">Products</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="<%= categories_url %>">Categories</a>
					</li>
					<% if logged_in? %>
						<li class="nav-item">
							<a class="nav-link" href="<%= user_url(current_user) %>">Profile</a>
						</li>
						<form class="d-flex" action="<%= session_url %>" method="post">
							<%= authenticity_token  %>
							<input type="hidden" name="_method" value="delete">
							<input type="submit" value="Logout">
						</form>
					<% else %>
						<li class="nav-item">
							<a class="nav-link" href="<%= new_session_url %>">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="<%= new_user_url %>">Register</a>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>

  <body>
    <%= yield %>
  </body>
</html>
