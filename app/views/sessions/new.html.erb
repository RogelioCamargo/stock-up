<section class="container-sm row mt-5 m-auto login">
	<h1 class="fs-3">Login</h1>
	<%= render "shared/errors" %>
	<div class="form-signin">
		<form action="<%= session_url %>" method="post">
			<%= authenticity_token %>
			<div class="mb-2">
				<label for="user_username">Username</label>
				<input type="text" name="user[username]" class="form-control form-control-sm" id="user_username">
			</div>

			<div class="mb-2">
				<label for="user_password">Password</label>
				<input type="password"  name="user[password]" class="form-control form-control-sm" id="user_password">
			</div>

			<button class="w-100 btn btn-sm btn-primary" type="submit">Sign in</button>
		</form>
	</div>
</section>